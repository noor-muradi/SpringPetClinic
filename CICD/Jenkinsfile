pipeline {
    agent {
        label 'ubuntu'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh "mvn clean install -Dmaven.test.skip=true"
            }
        }

        stage('Deploy to Dev') {
            when {
                branch 'dev'
            }
            steps {
                echo "Deploying snapshot build to Dev environment..."
            }
        }

        stage('Deploy to Prod') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying release build to Production..."
            }
        }
    }

    post {
        success {
            script {
                if (env.CHANGE_ID) {
                    setGitHubPullRequestStatus state: 'SUCCESS',
                        context: 'jenkins/ci',
                        message: "Build passed"
                }
            }
        }
        failure {
            script {
                if (env.CHANGE_ID) {
                    setGitHubPullRequestStatus state: 'FAILURE',
                        context: 'jenkins/ci',
                        message: "Build failed"
                }
            }
        }
    }
}
