pipeline {
    agent {
        label 'ubuntu'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                ansiColor('xterm') {
                    sh "mvn clean install -Dmaven.test.failure.ignore=false"
                }
            }
        }
    }

    post {
        success {
            script {
                if (env.CHANGE_ID) {
                    githubNotify credentialsId: 'github-pat',
                        context: 'jenkins/ci',
                        status: 'SUCCESS',
                        description: "Build passed",
                        targetUrl: env.BUILD_URL
                }
            }
        }
        failure {
            script {
                if (env.CHANGE_ID) {
                    githubNotify credentialsId: 'github-pat',
                        context: 'jenkins/ci',
                        status: 'FAILURE',
                        description: "Build failed",
                        targetUrl: env.BUILD_URL
                }
            }
        }
    }
}
